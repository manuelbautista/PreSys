@{
    Layout = "../Shared/LoginLayout.cshtml";
}
<!-- Content Wrapper -->
<div class="login-wrapper">
    <div class="container-center" ng-app="presysLogin" ng-controller="loginController">
        <div class="panel panel-bd">
            <div class="panel-heading">
                <div class="view-header">
                    <div class="header-icon">
                        <i class="pe-7s-unlock"></i>
                    </div>
                    <div class="header-title">
                        <h3>Entrar</h3>
                        <small><strong>Por favor digite sus credenciales para entrar al sistema.</strong></small>
                    </div>
                </div>
            </div>
            <div class="panel-body">
                <div id="loginForm" novalidate>
                    <!--Social Buttons-->
                    @*<div class="social">
                            <strong>Sign in using social network:</strong><br>
                            <div class="twitter_bg"><i class="fa fa-twitter"></i><a href="#" class="btn_1">Login Twitter</a></div>
                            <div class="fb_bg"><i class="fa fa-facebook"></i><a href="#" class="btn_2">Login Facebook</a></div>
                        </div>*@
                    <div class="form-group">
                        <label class="control-label">Usuario</label>
                        <div class="input-group">
                            <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
                            <input ng-model="username" id="username" type="text" class="form-control" name="email" placeholder="Usuario">
                        </div>
                        @*<span class="help-block small">Your unique username to app</span>*@
                    </div>
                    <div class="form-group">
                        <label class="control-label">Clave</label>
                        <div class="input-group">
                            <span class="input-group-addon"><i class="fa fa-key"></i></span>
                            <input ng-model="password" id="pass" type="password" class="form-control" name="password" placeholder="******">
                        </div>
                        @*<span class="help-block small">Your unique username to app</span>*@
                    </div>
                    <div>
                        <button ng-click="login()" class="btn btn-base pull-right">Entrar</button>
                        @*<div class="checkbox checkbox-success">
                                <input id="checkbox3" type="checkbox">
                                <label for="checkbox3">Keep me signed in</label>
                            </div>*@
                    </div>
                </div>
            </div>
        </div>
        <div id="bottom_text">
            No tienes una cuenta? <a href="/Register">Registrate</a><br>
            Recordar <a href="/Login/ForgotPassword">Clave</a>
        </div>

    </div>
  </div>